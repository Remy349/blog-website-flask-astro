---
import NavLink from "./NavLink.astro";

const token = Astro.cookies.get("token").value;
---

<header class="fixed left-0 top-0 w-full z-50 backdrop-blur-md">
  <nav class="flex h-16 justify-between max-w-4xl mx-auto items-center">
    <a href="/" class="font-bold text-2xl text-emerald-500">BlogWebsite</a>
    <div>
      <ul class="flex">
        <NavLink url="/" page="Home" />
        <NavLink url="/posts" page="Posts" />
        {
          !token ? (
            <>
              <NavLink url="/signup" page="Sign Up" />
              <NavLink url="/signin" page="Sign In" />
            </>
          ) : (
            <NavLink url="/profile" page="Profile" />
          )
        }
      </ul>
    </div>
  </nav>
</header>
